{
  "manifest_version": 2,
  "name": "Emoji Hacks",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "pegasus.min.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "emojis.json"
  ],
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }
}
