{
  "manifest_version": 2,
  "name": "Emoji Hacks",
  "version": "1.0",
  "background": {
    "scripts": [ "background.js" ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "pegasus.min.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    "emojis.json"
  ]
}
